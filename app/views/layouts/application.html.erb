<!doctype HTML>
<html>
  <head>
    <title>In Search of Sunrise</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield :head %>
  </head>
  <body class="application" data-background-images='<%= background_images %>'>
    <header>
      <h1><%= link_to 'In Search of Sunrise', root_path %></h1>
      <nav>
        <%= link_to 'Pictures', pictures_posts_path %>
        <%= link_to 'Music', music_posts_path %>
        <%= link_to 'Map', map_posts_path %>
        <%= link_to 'Places', places_posts_path %>
      </nav>
    </header>
    <%= yield %>
    <%= render partial: 'shared/gauges' %>
  </body>
</html>
